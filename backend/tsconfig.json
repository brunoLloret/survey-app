{
    "compilerOptions": {
      "target": "es2017",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["*"]
      },
      "typeRoots": [
        "./node_modules/@types",
        "./types"
      ]
    },
    "include": [
      "src/**/*",
      "prisma/**/*",
      "lib/**/*",
      "utils/**/*",
      "app.ts",
      "index.ts"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
  }